{
  "compileOnSave": true,
  "compilerOptions": {
      "esModuleInterop": true,
      "target": "ESNext",
      "module": "CommonJS",
      "removeComments": true,
      "strict": true,
      "skipLibCheck": true,
      "noImplicitThis": true,
      "outDir": "bin",
      "pretty": true,
      "resolveJsonModule": true
  },
  "include": [
      "src", "module.d.ts"
  ],
  "exclude": [
      "bin"
  ]
}